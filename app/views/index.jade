extends layout

block js
  script(src='/socket.io/socket.io.js')
  script.
    var socket = io();

    socket.on('profile:updated', function(msg){
      console.log('received:', msg)
    });

block content

  ul.profiles
    - each profile in profiles
      li
        = profile.displayName

  a(href='/connect') Connect with XING

  ul.walls
    each wall in walls
      li
        a(href='/walls/'+ wall._id) #{wall._id}

  form(method='post', action='/walls')
    input(type='submit', value='Create a new wall')
